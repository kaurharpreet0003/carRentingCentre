<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        android:background="#ddc"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="Car Rent Service"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:entries="@array/chooseAcar" />

        <EditText
            android:id="@+id/et1_dailyRant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Daily Rent"/>

        <TextView
            android:id="@+id/tv2_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="How many days you want to rent?                     #Days" />

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:outlineSpotShadowColor="#a00"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver's Age"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/black"/>

         <RadioGroup
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

             <RadioButton
                 android:id="@+id/twenty"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="50dp"
                 android:text="Less than 20"
                 android:textColor="#050"/>

             <RadioButton
                 android:id="@+id/aboveTwentyOne"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="50dp"
                 android:text="Between 21 and 60"
                 android:textColor="#050"/>

             <RadioButton
                 android:id="@+id/sixty"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="50dp"
                 android:text="Above 60"
                 android:textColor="#050"/>
         </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
            android:id="@+id/options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Options"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS"
            android:layout_below="@+id/options"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp"
            android:textColor="#050"
            android:id="@+id/gps1"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/childSeat"
                android:text="Child Seat"
                android:textColor="#050"
                android:layout_marginTop="65dp"
                android:layout_toRightOf="@+id/gps1"
                android:layout_marginLeft="20dp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unlimited"
                android:text="Unlimited millage"
                android:textColor="#050"
                android:layout_marginTop="65dp"
                android:layout_toRightOf="@+id/childSeat"
                android:layout_marginLeft="20dp"/>

            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/amount"
                android:hint="Amount"
                android:layout_marginLeft="60dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Total Payment"
                android:id="@+id/total_payment"
                android:layout_toRightOf="@+id/amount"
                android:layout_marginLeft="90dp"/>
        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/view_details"
            android:text="VIEW DETAILS"
            android:textColor="#a00"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"/>
    </LinearLayout>


</LinearLayout>